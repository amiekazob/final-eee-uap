import { facultyMembers } from '@/lib/faculty-data';
import { FacultyProfileTemplate } from '@/components/faculty/faculty-profile-template';
import { notFound } from 'next/navigation';
import { generateMetadata as generateSEOMetadata } from '@/lib/seo';
import { Metadata } from 'next';

const facultyId = "mr-a-h-m-zadidul-karim";

export async function generateMetadata(): Promise<Metadata> {
  const member = facultyMembers.find(m => m.id === facultyId);
  
  if (!member) {
    return {
      title: 'Faculty Member Not Found',
      description: 'The requested faculty member could not be found.'
    };
  }

  return generateSEOMetadata({
    title: `${member.name} - ${member.title}`,
    description: `Learn about ${member.name}, ${member.title} at UAP EEE Department. ${member.bio.substring(0, 150)}...`,
    keywords: `${member.name}, UAP faculty, ${member.title}, electrical engineering professor, ${member.researchInterests.join(', ')}`,
    url: `https://uap-eee.edu.bd/faculty/${member.id}`,
    image: member.image
  });
}

export default function FacultyProfilePage() {
  const member = facultyMembers.find(m => m.id === facultyId);

  if (!member) {
    notFound();
  }

  // Custom HOD styling and additional content
  const customizations = {
    headerStyle: 'gradient' as const,
    showBackButton: true,
    customBio: `${member.bio}

As the Head of Department, Mr. Karim leads the EEE department with a vision of academic excellence and research innovation. His expertise in Biomedical Signal and Image Processing has positioned the department at the forefront of emerging technologies in healthcare and medical engineering.

Under his leadership, the department has fostered a culture of research collaboration and industry partnerships, ensuring that students receive both theoretical knowledge and practical experience that prepares them for the challenges of modern engineering practice.`,
    additionalSections: (
      <div className="p-8 md:p-12 bg-gradient-to-r from-indigo-50 to-blue-50">
        <h2 className="text-2xl font-bold text-gray-900 mb-4">Message from the Head</h2>
        <p className="text-gray-700 leading-relaxed italic">
          "Welcome to the Department of Electrical and Electronic Engineering at the University of Asia Pacific. 
          Our department is committed to providing world-class education and fostering innovation in the field of 
          electrical and electronic engineering. We strive to prepare our students not just as engineers, but as 
          leaders who will shape the future of technology."
        </p>
      </div>
    )
  };

  return <FacultyProfileTemplate member={member} customizations={customizations} />;
}